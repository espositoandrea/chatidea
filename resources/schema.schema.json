{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://chatidea.github.io/schemas/schema",
	"title": "Database Schema",
	"description": "A descriptor of a database schema for use in CHATIDEA",
	"type": "object",
	"patternProperties": {
		".*": {
			"type": "object",
			"properties": {
				"column_list": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"column_alias_list": {
					"type": "object",
					"patternProperties": {
						".*": {
							"type": "string"
						}
					}
				},
				"primary_key_list": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"references": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"to_table": {
								"type": "string"
							},
							"from_attribute": {
								"type": "string"
							},
							"to_attribute": {
								"type": "string"
							},
							"show_attribute": {
								"type": "string"
							}
						},
						"required": [
							"from_attribute",
							"show_attribute",
							"to_attribute",
							"to_table"
						],
						"additionalProperties": false
					}
				}
			},
			"additionalProperties": false,
			"required": [
				"column_list",
				"primary_key_list"
			]
		}
	}
}