{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://chatidea.github.io/schemas/view",
	"title": "Database View",
	"description": "A descriptor of a database view for use in CHATIDEA",
	"type": "object",
	"patternProperties": {
		".*": {
			"type": "object",
			"properties": {
				"column_list": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"attribute": {
								"type": "string"
							},
							"display": {
								"type": "string"
							}
						},
						"required": [
							"attribute",
							"display"
						],
						"additionalProperties": false
					}
				}
			},
			"additionalProperties": false,
			"required": [
				"column_list"
			]
		}
	}
}